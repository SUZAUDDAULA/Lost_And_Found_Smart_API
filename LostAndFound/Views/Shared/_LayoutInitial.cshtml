            $("#btnclose").hide();

            var BaseUrl = "";
            var ip = location.host;
            if (ip == 'localhost:23999') {
                BaseUrl = 'http://localhost:23999/CustoomChatBox?lang=' + lang;
            }
            else {
                BaseUrl = 'http://103.134.88.13:122/CustoomChatBox?lang=' + lang;
            }

            var i = 0;
            $("#test").click(function () {
                if (i % 2 == 0) {
                    $('#chatbot-chat-frame').prop('src', BaseUrl);
                    $("#chatbot-chat").show();
                    $("#btnclose").show();
                } else {
                    $('#chatbot-chat-frame').removeAttr('src');
                    $("#chatbot-chat").hide();
                    $("#btnclose").hide();
                }
                i++;
            });

            $("#btnclose").click(function () {
                window.location.reload();
                $("#btnclose").hide();
            });

            // Password Validation

            $('.customSelect').select2();
            $(".errorMessage").hide();


        });


        function ClearLocalStorage() {
            window.localStorage.clear();
        }

        var BaseUrl = location.host;

    </script>
