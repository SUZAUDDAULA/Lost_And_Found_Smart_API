                                    <option value="3">HERO</option>
                                    <option value="3">OTEHRS</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-4">Model <span style="color: red">*</span></label>
                            <div class="col-md-8">
                                <input type="text" name="" id="" class="form-control" />
